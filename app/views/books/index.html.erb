<body>
<h1><strong class="">Books</strong></h2>


<table>
  <div>
    <tr class="index-caram">
      <th>Title</th>
      <th>Body</th>
    </tr>
  </div>

  <tbody class="index-item">
    <% if @books.present? %>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td ><%= link_to 'Show', book %></td>
        <td ><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td ><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, data: { confirm:"Are you sure?"} %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>


<h2><strong>New book</strong></h2>
<%= form_for(@book, url: "/books/#{@book.id}") do |f| %>

 <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
 <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>
</body>