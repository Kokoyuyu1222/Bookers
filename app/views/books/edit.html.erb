<h1>Editing Book</h1>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
<% if @book.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
  </ul>
</div>
 <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'show',book_path(@book.id) %>
<%= link_to 'Back', books_path %>